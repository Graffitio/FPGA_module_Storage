#ifndef FND_H_

#define FND_H_

// FND 폰트를 위한 Define
#define FND_A  0
#define FND_B  1
#define FND_C  2
#define FND_D  3
#define FND_E  4
#define FND_F  5
#define FND_G  6
#define FND_P  7 // dot point

// FND Digit을 위한 Define
#define FND_DIGIT_0     0
#define FND_DIGIT_10    1
#define FND_DIGIT_100   2
#define FND_DIGIT_1000  3

void FND_update_hex(unsigned data);
void FND_update_dec(unsigned data);

#endif
